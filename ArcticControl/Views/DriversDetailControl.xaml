            </Grid>
            
            <!-- Shown if no driver is selected-->
            <StackPanel 
                x:Name="NoDriverSelectedPane" 
                Visibility="Visible" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Center">
                <TextBlock 
                    Text="No Driver selected" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Style="{ThemeResource HeaderTextBlockStyle}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
