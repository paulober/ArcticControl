<UserControl
    x:Class="ArcticControl.Views.DriversDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:ArcticControl.Helpers"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">
    <UserControl.Resources>
        <helpers:BoolToGlyphConverter x:Key="BoolToGlyphConverter"/>
        <helpers:LocalArcDriverStateToBrushConverter x:Key="LocalArcDriverStateToBrushConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer
        Name="ForegroundElement"
        HorizontalAlignment="Stretch"
        VerticalScrollMode="Enabled"
        IsTabStop="True"
        Margin="0,0,0,30">
        <Grid>
            <StackPanel x:Name="DriverDetailsPane" HorizontalAlignment="Stretch" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <FontIcon
                        x:Name="DriverIcon"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="48"
                        Glyph="{x:Bind ListDetailsMenuItem.DriverVersion.IsLatest, Converter={StaticResource BoolToGlyphConverter}, Mode=OneWay}"
                        Foreground="{x:Bind ListDetailsMenuItem.DriverVersion.LocalState, Converter={StaticResource LocalArcDriverStateToBrushConverter}, Mode=OneWay}"
                        AutomationProperties.Name="Driver"  />
                    <TextBlock 
                        Margin="{StaticResource SmallLeftMargin}" 
                        VerticalAlignment="Center" 
                        Text="Intel® Graphics Driver"
                        Style="{ThemeResource TitleTextBlockStyle}"/>
                    <TextBlock
                        Margin="{StaticResource SmallLeftMargin}"
                        VerticalAlignment="Center"
                        Text="{x:Bind ListDetailsMenuItem.DriverVersion.GetFullVersion(), Mode=OneWay}"
                        Style="{ThemeResource TitleTextBlockStyle}" />
                </StackPanel>
                <StackPanel Padding="{StaticResource MediumTopMargin}">
                    <RelativePanel>
                        <StackPanel Orientation="Vertical" RelativePanel.AlignLeftWithPanel="True">
                            <TextBlock Text="Driver-Version" Style="{StaticResource DetailSubTitleStyle}" />

                            <TextBlock 
                                Text="{x:Bind ListDetailsMenuItem.DriverVersion.GetFullVersion(), Mode=OneWay}" 
                                Style="{StaticResource DetailBodyBaseMediumStyle}" />

                            <TextBlock
                                Margin="{StaticResource SmallTopMargin}"
                                Text="Driver date"
                                Style="{StaticResource DetailSubTitleStyle}" />
                            <TextBlock Text="{x:Bind ListDetailsMenuItem.FriendlyDate, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />
                        </StackPanel>
                        <Button 
                            x:Name="DownloadDriverButton"
                            RelativePanel.AlignRightWithPanel="True" 
                            Click="DownloadDriverButton_Click">

                            <Grid>
                                <StackPanel x:Name="DownloadButtonDefaultContent" Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Download"/>
                                        <TextBlock Margin="{StaticResource SmallLeftMargin}" Text="Download"/>
                                    </StackPanel>
                                    <muxc:ProgressBar
                                    x:Name="DownloadProgressBar"
                                    Margin="{StaticResource SmallTopMargin}" 
                                    HorizontalAlignment="Stretch" 
                                    IsIndeterminate="True" 
                                    ShowPaused="False" 
                                    ShowError="False"
                                    Visibility="Collapsed"/>
                                </StackPanel>
                                <TextBlock x:Name="DownloadButtonInstalledText" Text="Installed" Visibility="Collapsed"/>
                            </Grid>
                        </Button>
                        <!--NavigateUri="{x:Bind ListDetailsMenuItem.ReleaseNotesUri}"-->
                        <HyperlinkButton
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.Below="DownloadDriverButton"
                            Margin="{StaticResource MediumTopMargin}"
                            Content="Release notes"
                            Click="ReleaseNotesButton_Click"/>
                    </RelativePanel>

                    <TextBlock
                        Margin="{StaticResource SmallTopMargin}"
                        Text="Size"
                        Style="{StaticResource DetailSubTitleStyle}" />
                    <TextBlock Text="{x:Bind ListDetailsMenuItem.Size, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />

                    <TextBlock
                        Margin="{StaticResource SmallTopMargin}"
                        Text="SHA1"
                        Style="{StaticResource DetailSubTitleStyle}" />
                    <TextBlock Text="{x:Bind ListDetailsMenuItem.SHA1, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />

                    <!--<TextBlock
                    Margin="{StaticResource MediumTopMargin}"
                    Text="Note 1"
                    Style="{StaticResource DetailSubTitleStyle}" />
