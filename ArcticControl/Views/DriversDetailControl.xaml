            </StackPanel>
            
            <!-- Shown if no driver is selected-->
            <StackPanel x:Name="NoDriverSelectedPane" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="No Driver selected" Style="{ThemeResource HeaderTextBlockStyle}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
